<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/black"
    tools:context=".details_museum_activity">

    <TextView
        android:id="@+id/nameMuseum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Museo soumaya"
        style="@style/title_white"
        android:textSize="24sp"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_medium"/>

    <ImageView
        android:id="@+id/imageMuseum"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/nameMuseum"
        android:layout_marginTop="16dp"
        android:layout_height="250dp"/>

    <TextView
        android:id="@+id/descLarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageMuseum"
        android:textAlignment="center"
        style="@style/normalText_white"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/poppins_light"
        tools:text="Lorem ipsum dolor sit amet, consectetur"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/programarVisita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Programar Visita"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/white_button_1"
        android:drawableEnd="@drawable/agendar_cita_2"
        android:gravity="center"
        android:paddingStart="50dp"
        android:paddingEnd="20dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>