<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".details_museum_activity">

    <TextView
        android:id="@+id/nameMuseum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Museo soumaya"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"/>

    <ImageView
        android:id="@+id/imageMuseum"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/nameMuseum"
        android:layout_height="250dp"/>

    <TextView
        android:id="@+id/descLarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageMuseum"
        android:layout_margin="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>